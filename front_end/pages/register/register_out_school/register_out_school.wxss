/* pages/register_out_school/register_out_school.wxss */

page{
    background-color: rgba(245, 245, 245, 0.9);
    height: 100%;
    align-items: center;
}
.register_icon_los{
    margin:14%;
    height:21%;
    width: 35%;
    text-align: center;
}

.register_img_los{
    border-radius: 100%;
    height:100%;
    width: 100%;
}

.register_form{
    background-color: white;
    height: 45%;
    width: 86%;
    line-height: 100rpx;
    text-align: center;
    border: 1px solid rgba(238, 238, 238, 1);
    top:100%;
}

.input_view{
    margin-top:5%;
    margin-left: 18%;
    width: 70%;
    height: 10%;
    display: flex;
}
.input_icon{
    width: 50rpx;
    height: 50rpx;
    background-color: rgba(102, 8, 116, 1);
}

.input_text{
    margin-left: 6%;
    color: rgba(136, 136, 136, 1);
    font-size: 14px;
    font-family: Arial;
    border: 1px solid rgba(255, 255, 255, 1);
    border-bottom:1px solid rgba(187, 187, 187, 1);
}

.register_btn_view {
    text-align: center;
}

.register_btn {
    margin-top:6%;
    width: 80%;
    color: white;
    font-size:15px;
    border-radius: 6px;
    background-color: rgba(102, 8, 116, 0.9);
    font-family: Arial;
    border: 1px solid rgba(187, 187, 187, 1);
}
.register_btn_login{
    text-align: center;
    color: rgba(136, 136, 136, 1);
    font-size: 14px;
    font-family: Arial;
}