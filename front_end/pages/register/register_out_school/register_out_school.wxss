/* pages/register_out_school/register_out_school.wxss */

page{
    background-color: rgba(245, 245, 245, 0.9);
    height: 100%;
    align-items: center;
}
.register_icon_los{
    margin:14%;
    height:21%;
    width: 35%;
    text-align: center;
}

.register_img_los{
    border-radius: 100%;
    height:100%;
    width: 100%;
}

.register_form{
    background-color: white;
    height: 45%;
    width: 86%;
    text-align: center;
    border: 2rpx solid rgba(238, 238, 238, 1);

}

.input_view{
    margin-left: 18%;
    width: 70%;
    height: 10%;
    display: flex;

    margin-top:6%;
}
.input_icon{
    width: 50rpx;
    height: 50rpx;
    background-color: rgba(102, 8, 116, 1);
}

.input_text{
    margin-left: 6%;
    color: rgba(136, 136, 136, 1);
    font-size: 28rpx;
    font-family: Arial;
    border: 2rpx solid rgba(255, 255, 255, 1);
    border-bottom:2rpx solid rgba(187, 187, 187, 1);

    text-align: left;
    font-size: 28rpx;
}

.register_btn_view {
    margin-top: 10%;
    text-align: center;
}

.register_btn {
    margin-top:6%;
    width: 80%;
    color: white;
    font-size:30rpx;
    border-radius: 12rpx;
    background-color: rgba(102, 8, 116, 0.9);
    font-family: Arial;
    border: 12rpx solid rgba(187, 187, 187, 1);
}
.register_btn_login{
    margin-top: 3%;
    text-align: center;
    color: rgba(136, 136, 136, 1);
    font-size: 28rpx;
    font-family: Arial;
}

.Validate_btn{
    position: absolute;
    margin-top: 3%;
    margin-left: 26%;
    height: 6rpx;
    width: 25%;
    align-items: flex-end;
}
.login_btn_v{
    font-size: 25rpx;
}

.Validate_view{
    display: flex;
    margin-left: 18%;
    width: 70%;
    height: 10%;
}
.fa-icon_v{
    margin-top:8%;
    color: rgba(102, 8, 116, 1);
}
.input_text_v{
    margin-top:8%;
    text-align: left;
    margin-left: 6%;
    color: rgba(136, 136, 136, 1);
    font-size: 28rpx;
    font-family: Arial;
    border: 2rpx solid rgba(255, 255, 255, 1);
    border-bottom:2rpx solid rgba(187, 187, 187, 1);
}