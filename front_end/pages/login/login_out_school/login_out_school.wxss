/* pages/login_out_school/login_out_school.wxss */
page{
    background-color: rgba(245, 245, 245, 0.9);
    height: 100%;
    align-items: center;
}
.login_icon_los{
    margin:14%;
    height:21%;
    width: 35%;
    text-align: center;
}

.login_img_los{
    border-radius: 100%;
    height:100%;
    width: 100%;
}

.login_form_los{
    background-color: white;
    height: 45%;
    width: 86%;
    line-height: 100rpx;
    text-align: center;
    border: 1px solid rgba(238, 238, 238, 1);
    top:100%;
}

.input_view{
    margin-top:8%;
    margin-left: 18%;
    width: 70%;
    height: 10%;
    display: flex;
}
.input_icon{
    width: 50rpx;
    height: 50rpx;
    background-color: rgba(102, 8, 116, 1);
}

.input_text{
    text-align: left;
    margin-left: 6%;
    color: rgba(136, 136, 136, 1);
    font-size: 14px;
    font-family: Arial;
    border: 1px solid rgba(255, 255, 255, 1);
    border-bottom:1px solid rgba(187, 187, 187, 1);
}

.login_btn_view {
    margin-top: 13%;
    height: 7%;
}

.login_btn {
    width: 80%;
    color: white;
    font-size:15px;
    border-radius: 6px;
    background-color: rgba(102, 8, 116, 0.9);
    font-family: Arial;
    border: 1px solid rgba(187, 187, 187, 1);
}

.register_btn {
    width: 80%;
    color: white;
    font-size:15px;
    border-radius: 6px;
    background-color: rgba(102, 8, 116, 0.9);
    font-family: Arial;
    border: 1px solid rgba(187, 187, 187, 1);
}
