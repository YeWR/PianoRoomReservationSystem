/**login.wxss**/

page{
    height: 100%;
    width: 100%;
}
.login_img {
    height:35%;
    width: 100%;
    line-height: 15rpx;
    text-align: center;
    z-index: 0;
}
.login_img_bg {
    height:80%;
    width: 100%;
    line-height: 20rpx;
    background-color: rgba(102, 8, 116, 0.9);
    font-size: 14rpx;
    text-align: center;
    border: 2rpx solid rgba(187, 187, 187, 1);
    z-index:1;
}
.login_img_img {
    height:20%;
    width: 100%;
    line-height: 20rpx;
    font-size: 14rpx;
    text-align: center;
}
.login_btn_view {
    height: 60%;
    width: 50%;
}

.login_btn_in_school {
    color: white;
    font-size:30rpx;
    border-radius: 12rpx;
    background-color: rgba(102, 8, 116, 0.9);
    text-align: center;
    font-family: Arial;
    border: 2rpx solid rgba(187, 187, 187, 1);
    top:7%;
}

.login_btn_out_school {
    color: white;
    font-size:30rpx;
    border-radius: 12rpx;
    background-color: rgba(102, 8, 116, 0.9);
    text-align: center;
    font-family: Arial;
    border: 2rpx solid rgba(187, 187, 187, 1);
    top:24%;
}

.userinfo {
    display: flex;
    flex-direction: column;
    align-items: center;
}

.userinfo-avatar {
    width: 128 rpx;
    height: 128 rpx;
    margin: 20 rpx;
    border-radius: 50%;
}

.userinfo-nickname {
    color: #aaa;
}