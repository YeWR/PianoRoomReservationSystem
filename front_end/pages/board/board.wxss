    margin-top: 2%;
    width: 90%;
    height: 30%;
    display: flex;
    flex-direction: row;
    /*justify-content: space-between;*/
}

.up_icon{
    width: 12%;
}

.up_text{
    width: 88%;
}

.title{
    font-size: 42rpx;
    font-weight: bolder;
    font-family: SFUIText-regular;
}

.middle_title{
    width: 90%;
    height: 30%;
    display: flex;
    /*flex-direction: row;*/

}

.middle_time{
    width: 37%;
}

.middle_time_text{
    font-size: 30rpx;
    font-family: SFUIText-regular;
}

.middle_line{
    width: 50%;
}

.middle_line_text{
    height: 50%;
    border-bottom: 2rpx solid #660874;

}

.bottom_title{
    height: 30%;
