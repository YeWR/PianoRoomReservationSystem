/* pages/reserve/reserve_detail/reserve_detail.wxss */
.top_board {
    background-color: rgba(102, 8, 116, 0.9);
    height: 37%;
    width: 100%;
    border: 1px solid rgba(187, 187, 187, 1);
}

.reserve-info {

    position: absolute;
    margin-top: 18%;
    border: 1px solid rgba(238, 238, 238, 1);
    background-color: white;
    height: 31%;
    width: 86%;
}

.date {
    margin-top: 6%;
    font-size: xx-large;
    text-align: center;
    color: black;
    font-weight: bolder;
    font-family: SFUIText-regular;
}

.reserve-info-cut {
    display: flex;
    justify-content: center;
    width: 100%;
    margin-top: 6%;
    height: 1%;
}

.reserve-info-cutline {
    height: 100%;
    width: 90%;
    background-color: rgba(238, 238, 238, 1);
}

.progress-days {
    margin-top: 8%;
}

.progress {
    width: 83%;
    margin-left: 8%;
}

.progress-time {
    margin-top: 1%;
    width: 100%;
    font-size: 26 rpx;
    font-family: SFUIText-regular;
}

.progress-time-each {
    margin-left: 7%;
}

.reserve-card {
    align-items: center;
    background-color: white;
    margin-top: 20%;
    height: 43%;
    width: 86%;
    color: rgba(0, 0, 0, 1);
    display: flex;
    flex-direction: column;
    border-radius: 6 rpx;
}

.date-view {
    margin-top: 5%;
    width: 90%;
    height: 10%;
    display: flex;
    color: rgba(102, 8, 116, 1);

}

.date-icon {
    color: rgba(102, 8, 116, 1);
}

.date-text {
    text-align: center;
    width: 30%;
    margin-left: 2%;
    color: rgba(136, 136, 136, 1);
    font-size: 18px;
    font-family: Arial;
}

.date-info {
    justify-content: center;
    width: 70%;
    border-bottom: 1px solid rgba(187, 187, 187, 1);
    text-align: center;
    color: black;
}
.money-info{
    justify-content: center;
    width: 70%;
    text-align: center;
    color: black;
    font-size: 80rpx;
    font-weight: bolder;
}

