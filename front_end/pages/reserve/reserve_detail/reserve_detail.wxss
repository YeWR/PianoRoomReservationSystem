}

.select_time {
    display: flex;
    justify-content: space-between;
    width: 70%;
    border-bottom: 1px solid rgba(187, 187, 187, 1);
    text-align: center;
    color: black;
}

.select_time_board {
    font-weight: bold;
}

.select_people{
    display: flex;
    height: 100%;
    width: 70%;
    justify-content: center;
}
.people-btn{
    height: 100%;
    width: 50%;
    text-align: center;
    font-size: 23rpx;
    font-weight: bold;
}
.people-btn-white{
    height: 100%;
    width: 50%;
    text-align: center;
    font-size: 23rpx;
    font-weight: bold;
    color: white;
}

.progress{
    width: 83%;
    margin-left: 8%;
}
.progress-time{
    margin-top: 1%;
    width: 100%;
    font-size: 26rpx;
    font-family: SFUIText-regular;
}
.progress-time-each{
    margin-left: 7%;
}

.reserve_btn_view {
    margin-top:10%;
    width: 80%;
    color: white;
    font-size:15px;
